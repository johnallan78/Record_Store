<div class="create-container">
<% albums_in_stock = [] %>
<% for records in @album %>
<% albums_in_stock.push(records) %>
<% end %>
<h1>There are <em><%= albums_in_stock.count %></em> albums in stock right now.</h1>
</div>
 


<% @album.each do |album| %>

<div>
  <ul>
    <li>
      <img class="album-cover" src="<%= album.url%>" alt="<%= album.title %>"/>
      <h3><%= album.title %></h3>
      <p><%= album.artist.name%></p>
    </li>
    </ul>
  </div>
<% end %>
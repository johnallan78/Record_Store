<h1>Add a new Album</h1>

<div class="form-container">
<form action="/albums" method="post">
  
 <br><label for="title">Title</label>
  <input type="text" id="title" name="title">
  <br><label for="artist">Artist</label>
  <input type="text" id="artist" name="artist">

  <br><label for="genre">Select Genre</label>
  <select name="genre" id="genre">

      <option value="1">Rock</option>
      <option value="2">Funk</option>
      <option value="3">Soul</option>
      <option value="4">Jazz</option> 
      <option value="5">Bluegrass</option> 
      <option value="6">60s Rock</option> 
      <option value="7">Prog Rock</option> 
      <option value="8">Folk</option> 
      <option value="9">Country</option> 
     
      </select>


<!-- add in a drop down menu for genre here -->
 
 <br><label for="quantity">Quantity</label>
  <input type="number" id="quantity" name="quantity">

 <br><div class="button-submit"><input type="submit" value="Add This Album!"></div>
</form>
</div>